doctype html
html
    head
      block head 
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css', integrity='sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1', crossorigin='anonymous')
        link(rel='stylesheet',href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
        link(rel='stylesheet',href='/css/style.css')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js')
        title nodejs-docker |
    body 
        h1.display-5 App - Nodejs, MongoDb, Docker, Jenkins. 
        .jumbotron
            .mb-3
                label.form-label(for='title') Blog Title
                input#title.form-control(type='text' placeholder='title')
            .mb-3
                label.form-label(for='description') Description
                textarea#description.form-control(rows='3')

            button.btn.btn-primary.add(type='button') Add Post

        .row
            each post in posts
                .col-sm-4
                    .card(style='width: 18rem;')
                        .card-body
                            h5.card-title= post.title
                            p.card-text=post.description
                            button.btn.btn-danger.delete(type='button',data-id=post.id) Delete Post
                
        script(src='/js/main.js')
